<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для выравнивания кнопки навигации по низу -->
    <style name="BottomAlignedToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:gravity">bottom</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginBottom">8dp</item>
    </style>

    <!-- Стиль для кнопки навигации -->
    <style name="BottomAlignedNavButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:titleMarginTop">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
</resources>